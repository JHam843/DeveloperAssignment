@model IEnumerable<DeveloperAssignment.Models.Child>

@{
    ViewData["Title"] = "Compare Tables";
}

<h2>Compare Tables</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No differences found between the databases.</p>
}
